extends ../layout.pug

block content
  h1 Checked Out Books
  p
    a.button(href='/books/new') Create New Book
  p
    | Filters 
    a(href='/books') All
    |  
    a(href='/books/overdue_books') Overdue
    |  
    a(href='/books/checked_books') Checked Out

  //- Check to see if there are any checked out books
  if books.length  
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each book in books
          tr
            td
              a(href=`/books/${book.id}`) #{book.title}
            td= book.author
            td= book.genre
            td= book.first_published
  else
    p There are currently no books checked out.